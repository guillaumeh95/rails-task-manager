<h1><%= @task.title %> </h1>
<p class="task-details"> <%= @task.details %></p>
<p>
  <% if @task.completed %>
    <i class="fa fa-check-square-o" aria-hidden="true"> This task is completed</i>
  <% else %>
    <i class="fa fa-square-o" aria-hidden="true"> This task is not completed yet</i>
  <% end %>
</p>
<p><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i> Edit task'.html_safe, edit_task_path %></p>
<p class="footer"><%= link_to '<i class="fa fa-reply" aria-hidden="true"></i> Back to list'.html_safe, tasks_path %></p>
